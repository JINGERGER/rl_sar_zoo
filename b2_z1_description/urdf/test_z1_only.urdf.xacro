<?xml version="1.0"?>
<!-- Test file: Z1 arm only with ros2_control for Gazebo Classic -->
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="z1_test">

    <!-- Fixed base link for the arm -->
    <link name="world"/>
    
    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.1 0.1 0.05"/>
            </geometry>
            <material name="grey">
                <color rgba="0.5 0.5 0.5 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.1 0.1 0.05"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="1.0"/>
            <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
        </inertial>
    </link>
    
    <joint name="world_to_base" type="fixed">
        <parent link="world"/>
        <child link="base_link"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>
    
    <!-- Z1 Link 00 (base of arm) -->
    <link name="z1_link00">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://b2_z1_description/meshes/z1/visual/link00.dae"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0.04" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.04" length="0.08"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0.0 0.0 0.04" rpy="0 0 0"/>
            <mass value="0.5"/>
            <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
        </inertial>
    </link>
    
    <joint name="base_to_z1" type="fixed">
        <parent link="base_link"/>
        <child link="z1_link00"/>
        <origin xyz="0 0 0.025" rpy="0 0 0"/>
    </joint>
    
    <!-- Simplified Z1 arm structure - just use existing b2_z1 URDF as reference -->
    <!-- For this test, we'll include the full b2_z1 description and extract Z1 parts -->
    <xacro:include filename="$(find b2_z1_description)/urdf/b2_z1.urdf.xacro"/>
    
    <!-- ros2_control configuration -->
    <ros2_control name="Z1System" type="system">
        <hardware>
            <plugin>gazebo_ros2_control/GazeboSystem</plugin>
        </hardware>
        
        <!-- Z1 Joint 1 -->
        <joint name="z1_joint1">
            <command_interface name="position">
                <param name="min">-3.14</param>
                <param name="max">3.14</param>
            </command_interface>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
            <state_interface name="effort"/>
        </joint>
        
        <!-- Z1 Joint 2 -->
        <joint name="z1_joint2">
            <command_interface name="position">
                <param name="min">-2.61</param>
                <param name="max">2.61</param>
            </command_interface>
            <state_interface name="position">
                <param name="initial_value">1.57</param>
            </state_interface>
            <state_interface name="velocity"/>
            <state_interface name="effort"/>
        </joint>
        
        <!-- Z1 Joint 3 -->
        <joint name="z1_joint3">
            <command_interface name="position">
                <param name="min">-2.61</param>
                <param name="max">2.61</param>
            </command_interface>
            <state_interface name="position">
                <param name="initial_value">-1.57</param>
            </state_interface>
            <state_interface name="velocity"/>
            <state_interface name="effort"/>
        </joint>
        
        <!-- Z1 Joint 4 -->
        <joint name="z1_joint4">
            <command_interface name="position">
                <param name="min">-3.14</param>
                <param name="max">3.14</param>
            </command_interface>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
            <state_interface name="effort"/>
        </joint>
        
        <!-- Z1 Joint 5 -->
        <joint name="z1_joint5">
            <command_interface name="position">
                <param name="min">-2.61</param>
                <param name="max">2.61</param>
            </command_interface>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
            <state_interface name="effort"/>
        </joint>
        
        <!-- Z1 Joint 6 -->
        <joint name="z1_joint6">
            <command_interface name="position">
                <param name="min">-3.14</param>
                <param name="max">3.14</param>
            </command_interface>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
            <state_interface name="effort"/>
        </joint>
    </ros2_control>
    
    <!-- Gazebo plugin -->
    <gazebo>
        <plugin name="gazebo_ros2_control" filename="libgazebo_ros2_control.so">
            <robot_sim_type>gazebo_ros2_control/GazeboSystem</robot_sim_type>
            <parameters>$(find b2_z1_description)/config/z1_only_control.yaml</parameters>
        </plugin>
    </gazebo>
    
    <!-- Gazebo link properties -->
    <gazebo reference="base_link">
        <material>Gazebo/Grey</material>
    </gazebo>
    
    <gazebo reference="z1_link00">
        <material>Gazebo/White</material>
    </gazebo>

</robot>
